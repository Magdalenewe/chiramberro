package proyectosjava;
import java.util.*;
public class chiramberro14 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		  Scanner sc = new Scanner(System.in);
	        System.out.print("Introduce el tamaño del triángulo: ");
	        int n = sc.nextInt();
	        
	        for (int i = 1; i <= n; i++) {
	            for (j = i; int j <= 1;  j++) {
	                System.out.print("* ");
	            }
	            System.out.println();
	        }
	}
	
